@model List<MyPortfolioUdemy.DAL.Entities.About>
<section id="about" class="s-about target-section">
    <div class="row narrow section-intro has-bottom-sep">
        <div class="col-full text-center">
            <h3>Hakkımda</h3>
            <h1>Hakkımda daha fazla bilgi...</h1>
            <p class="lead">Ben Kimim? Nerede Okudum? Nerede Çalışıyorum? Hobilerim Neler?</p>
        </div>
    </div>
    @foreach (var item in Model)
    {
        <div class="row about-content">
            <div class="col-six tab-full left">
                <h3>@item.Title - @item.SubDescription</h3>
                <p>@item.Details</p>
            </div>
            @await Component.InvokeAsync("_SkillComponentPartial")
        </div>
    }

    <div class="row about-content about-content--buttons">

        <div class="col-six tab-full left">
            <a href="~/hola-master/Yiğit Ataman.pdf" download="Yiğit Ataman.pdf" class="btn btn--primary full-width">Özgeçmiş İndir!</a>
        </div>
        <div class="col-six tab-full right">
            <a href="#contact" class="btn full-width">Bana Ulaş!</a>
        </div>

    </div> <!-- end about-content buttons -->
    @await Component.InvokeAsync("_ExperienceComponentPartial")
</section>
