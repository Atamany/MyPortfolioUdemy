@model Account
@{
    ViewData["Title"] = "ChangePassword";
    Layout = "~/Views/Layout/Index.cshtml";
}

<div class="content">
    <div class="container-fluid">@* 
        <h4 class="page-title">Şifre Değiştir!</h4> *@
        <div class="row">
            <div class="col-md-12">
                <div class="card">
                    <div class="card-header">
                        <div class="card-title">Şifre Değiştir!</div>
                    </div>
                    <div class="card-body">
                        @if (ViewBag.ErrorMessage != null)
                        {
                            <br />
                            <h4><i class="la la-exclamation"></i>Hata: <b>@ViewBag.ErrorMessage</b></h4>
                            <br />
                        }
                        <form method="post">
                            <br />
                            <label>Eski Şifre</label>
                            <input type="password" name="OldPassword" class="form-control" />
                            <br />
                            <label>Yeni Şifre</label>
                            <input type="password" name="NewPassword" class="form-control" />
                            <br />
                            <label>Yeni Şifre (Tekrar)</label>
                            <input type="password" name="NewPassword2" class="form-control" />
                            <br />
                            <button class="btn btn-outline-primary">Değiştir!</button>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>


