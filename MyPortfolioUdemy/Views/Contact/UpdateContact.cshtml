@model Contact
@{
    ViewData["Title"] = "UpdateContact";
    Layout = "~/Views/Layout/Index.cshtml";
}

<div class="content">
    <div class="container-fluid">@* 
        <h4 class="page-title">İletişim</h4> *@
        <div class="row">
            <div class="col-md-12">
                <div class="card">
                    <div class="card-header">
                        <div class="card-title">İletişim Güncelle</div>
                    </div>
                    <div class="card-body">
                        <div class="card-sub">
                            İletişim ile ilgili güncelleme işlemlerini aşağıdaki panelden yapabilirsiniz.
                        </div>
                        <form method="post">
                            <br />
                            <input type="hidden" asp-for="ContactId" />
                            <label>Başlık</label>
                            <input type="text" asp-for="Title" class="form-control" />
                            <br />
                            <label>Açıklama</label>
                            <textarea rows="4" asp-for="Description" class="form-control"></textarea>
                            <br />
                            <label>Telefon</label>
                            <input type="text" asp-for="Phone1" class="form-control" />
                            <br />
                            <label>WhatsApp</label>
                            <input type="text" asp-for="Phone2" class="form-control" />
                            <br />
                            <label>1. E-Posta</label>
                            <input type="email" asp-for="Email1" class="form-control" />
                            <br />
                            <label>2. E-Posta</label>
                            <input type="email" asp-for="Email2" class="form-control" />
                            <br />
                            <label>Adres</label>
                            <input type="text" asp-for="Address" class="form-control" />
                            <br />
                            
                            <button class="btn btn-outline-warning">Güncelle</button>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>



